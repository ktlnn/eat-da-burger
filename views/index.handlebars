<h1>Eat Da Burger!</h1>

<section class="row">
  <h3>Burgers Ready To Be Eaten</h3>
<card class="eat">
  
  
      <div class="col-lg-6">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
      </div>
    </div>
  
</card>

<h3>Burgers I Would Devour Again</h3>
<card class="save">
  
  
      <div class="col-lg-6">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
      </div>
    </div>

</card>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p></p>
        <form class="create-form">
          <h2>Add a Burger</h2>
          <p>Not craving our original burgers? Here's your chance to create your own!</p>
          <div class="form-group">
            <label for="ca">Name of your Burger:</label>
            <input type="text" id="ca" name="burger">
          </div>
          <div class="form-group">
          
            <input type="radio" name="devoured" value="1" checked>Ready to Eat<br>
            <input type="radio" name="devoured" value="0"> Save Da Burger
          </div>
          <button class="submit-button" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</section>