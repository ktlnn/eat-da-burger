<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Eat Da Burger!</h1>
        <p></p>
        <form class="create-form">
          <h2>Add a Burger</h2>
          <div class="form-group">
            <label for="ca">Name of your Burger:</label>
            <input type="text" id="ca" name="burger">
          </div>
          <div class="form-group">
            <label for="devoured">Hungry?</label><br>
            <input type="radio" name="devoured" value="1" checked>Ready to Eat<br>
            <input type="radio" name="devoured" value="0"> Save Da Burger
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</section>


<card class="eat">
  <h2>Burgers Craving To Be Eaten</h2>
  <div class="container">
    <div class="row">
      <div class="col-sm">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
      </div>
    </div>
  </div>
</card>

<card class="save">
  <h2>Burgers I Would Devour Again</h2>
  <div class="container">
    <div class="row">
      <div class="col-sm">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
      </div>
    </div>
  </div>
</card>